{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "ES5",
        "lib": [
            "ES2015",
            "ES2017",
            "DOM"
        ],
        "jsx": "react",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "incremental": true
    },
    "exclude": [
        "./src/**/*.spec.ts",
        "./src/**/*.spec.tsx",
        "node_modules",
    ]
}